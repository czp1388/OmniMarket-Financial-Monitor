/* OmniMarket 全局样式 - 优化版 */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* 全局变量 */
:root {
  /* 颜色变量 */
  --bg-primary: #0a0e17;
  --bg-secondary: #141a2a;
  --bg-tertiary: #1a2332;
  --bg-elevated: #1f2937;
  --bg-hover: #2a3a5a;
  --bg-input: #0d1117;
  
  --border-primary: #2a3a5a;
  --border-secondary: #1f2937;
  --border-accent: #00ccff;
  
  --text-primary: #e5e7eb;
  --text-secondary: #9ca3af;
  --text-tertiary: #6b7280;
  
  --color-up: #00ff88;
  --color-down: #ff4444;
  --color-accent: #00ccff;
  
  /* 字体 */
  --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-mono: 'JetBrains Mono', 'Courier New', monospace;
  
  /* 间距 */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 0.75rem;
  --spacing-lg: 1rem;
  --spacing-xl: 1.5rem;
  
  /* 动画 */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

/* 基础样式重置 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  font-family: var(--font-primary);
  font-size: 0.875rem;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--bg-primary);
  overflow-x: hidden;
}

#root {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: var(--bg-hover);
  border-radius: 4px;
  transition: background var(--transition-fast);
}

::-webkit-scrollbar-thumb:hover {
  background: #3a4a6a;
}

/* Firefox 滚动条 */
* {
  scrollbar-width: thin;
  scrollbar-color: var(--bg-hover) var(--bg-secondary);
}

/* 选择文本样式 */
::selection {
  background-color: rgba(0, 204, 255, 0.3);
  color: var(--text-primary);
}

::-moz-selection {
  background-color: rgba(0, 204, 255, 0.3);
  color: var(--text-primary);
}

/* 通用组件样式 */
button {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  cursor: pointer;
  border: none;
  outline: none;
  background: none;
  transition: all var(--transition-fast);
}

button:disabled {
  cursor: not-allowed;
  opacity: 0.5;
}

input,
textarea,
select {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
  background-color: var(--bg-input);
  border: 1px solid var(--border-primary);
  border-radius: 0.375rem;
  padding: 0.5rem 0.75rem;
  outline: none;
  transition: all var(--transition-fast);
}

input:focus,
textarea:focus,
select:focus {
  border-color: var(--border-accent);
  box-shadow: 0 0 0 2px rgba(0, 204, 255, 0.1);
}

input:disabled,
textarea:disabled,
select:disabled {
  cursor: not-allowed;
  opacity: 0.5;
  background-color: var(--bg-secondary);
}

/* 链接样式 */
a {
  color: var(--color-accent);
  text-decoration: none;
  transition: color var(--transition-fast);
}

a:hover {
  color: #00d4ff;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: 0.5rem;
  padding: var(--spacing-lg);
  transition: all var(--transition-fast);
}

.card:hover {
  border-color: var(--border-accent);
  box-shadow: 0 0 20px rgba(0, 204, 255, 0.1);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  font-weight: 500;
  border-radius: 0.375rem;
  transition: all var(--transition-fast);
  white-space: nowrap;
}

.btn-primary {
  background-color: var(--color-accent);
  color: #000;
}

.btn-primary:hover {
  background-color: #00d4ff;
  box-shadow: 0 0 15px rgba(0, 204, 255, 0.5);
}

.btn-success {
  background-color: var(--color-up);
  color: #000;
}

.btn-success:hover {
  background-color: #00ff99;
  box-shadow: 0 0 15px rgba(0, 255, 136, 0.5);
}

.btn-danger {
  background-color: var(--color-down);
  color: #fff;
}

.btn-danger:hover {
  background-color: #ff5555;
  box-shadow: 0 0 15px rgba(255, 68, 68, 0.5);
}

.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1px solid var(--border-primary);
}

.btn-secondary:hover {
  background-color: var(--bg-hover);
  border-color: var(--border-accent);
}

.btn-ghost {
  color: var(--text-secondary);
  background-color: transparent;
}

.btn-ghost:hover {
  color: var(--text-primary);
  background-color: var(--bg-hover);
}

/* 价格显示 */
.price-up {
  color: var(--color-up);
}

.price-down {
  color: var(--color-down);
}

.price-neutral {
  color: var(--text-secondary);
}

/* 表格样式 */
.table {
  width: 100%;
  border-collapse: collapse;
  font-family: var(--font-mono);
  font-size: 0.8125rem;
}

.table thead {
  background-color: var(--bg-tertiary);
  border-bottom: 2px solid var(--border-primary);
}

.table th {
  padding: 0.75rem 1rem;
  text-align: left;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  font-size: 0.75rem;
  letter-spacing: 0.05em;
}

.table td {
  padding: 0.75rem 1rem;
  border-bottom: 1px solid var(--border-secondary);
  vertical-align: middle;
}

.table tbody tr {
  transition: background-color var(--transition-fast);
}

.table tbody tr:hover {
  background-color: var(--bg-hover);
}

/* 加载动画 */
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes slideIn {
  from {
    transform: translateY(-10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.spinner {
  animation: spin 1s linear infinite;
}

.pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.slide-in {
  animation: slideIn var(--transition-base);
}

/* 工具类 */
.text-mono {
  font-family: var(--font-mono);
}

.text-gradient {
  background: linear-gradient(90deg, var(--color-accent), var(--color-up));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.glow {
  box-shadow: 0 0 20px rgba(0, 204, 255, 0.3);
}

.glow-green {
  box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
}

.glow-red {
  box-shadow: 0 0 20px rgba(255, 68, 68, 0.3);
}

/* 减少动画模式 */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
