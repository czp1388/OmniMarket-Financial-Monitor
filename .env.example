# Telegram机器人配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_IDS=your_chat_id_1,your_chat_id_2

# 数据库配置 (未来使用)
# DATABASE_URL=sqlite:///./financial_monitor.db

# 其他配置
LOG_LEVEL=INFO
